<h1><%= t Plant.model_name.human(count: 2) %></h1>
<table class='table table-hover'>
  <thead>
      <th><%= Plant.human_attribute_name(:family) %></th>
      <th><%= Plant.human_attribute_name(:name) %></th>
      <th><%= Plant.human_attribute_name(:sci_name) %></th>
      <th><%= Plant.human_attribute_name(:common_name) %></th>
      <th><%#= Plant.human_attribute_name(:kind) %></th>
      <th><%#= Plant.human_attribute_name(:coldest) %></th>
      <th><%#= Plant.human_attribute_name(:warmest) %></th>
      <th><%#= Plant.human_attribute_name(:height_min) %></th>
      <th><%#= Plant.human_attribute_name(:height_max) %></th>
      <th><%#= Plant.human_attribute_name(:spread_min) %></th>
      <th><%#= Plant.human_attribute_name(:spread_max) %></th>
      <th><%#= Plant.human_attribute_name(:bloom_start) %></th>
      <th><%#= Plant.human_attribute_name(:bloom_end) %></th>
      <th><%#= Plant.human_attribute_name(:bloom_color) %></th>
      <th><%#= Plant.human_attribute_name(:light_min) %></th>
      <th><%#= Plant.human_attribute_name(:light_max) %></th>
      <th><%#= Plant.human_attribute_name(:soil_texture) %></th>
      <th><%#= Plant.human_attribute_name(:soil_ph) %></th>
      <th><%#= Plant.human_attribute_name(:special_reqs) %></th>
      <th><%#= Plant.human_attribute_name(:description) %></th>
      <th><%= t 'status.status' %></th>
      <th><%= t 'actions.actions' %><th>
  </thead>

  <tbody>
    <% @plants.each do |plant| %>
      <tr>
        <td><%= plant.family.title %></td>
        <td><%= plant.name %></td>
        <td><%= plant.sci_name %></td>
        <td><%= plant.common_name %></td>
        <td><%#= plant.kind %></td>
        <td><%#= plant.coldest %></td>
        <td><%#= plant.warmest %></td>
        <td><%#= plant.height_min %></td>
        <td><%#= plant.height_max %></td>
        <td><%#= plant.spread_min %></td>
        <td><%#= plant.spread_max %></td>
        <td><%#= plant.bloom_start %></td>
        <td><%#= plant.bloom_end %></td>
        <td><%#= plant.bloom_color %></td>
        <td><%#= plant.light_min %></td>
        <td><%#= plant.light_max %></td>
        <td><%#= plant.soil_texture %></td>
        <td><%#= plant.soil_ph %></td>
        <td><%#= plant.special_reqs %></td>
        <td><%#= plant.description %></td>
        <td><%= status_mark plant.status %></td>
        <td><%= render 'admin/shared/index_buttons', resource: plant %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<div class='row'>
  <div class='col-md-2'>
    <%= link_to t('actions.create'), new_admin_plant_path, class: 'btn btn-primary btn-sm' %>
  </div>
</div>
