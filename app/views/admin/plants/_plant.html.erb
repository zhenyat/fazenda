<div class='container'>
  <table class='table table-striped'>
    <tbody>
      <% @plant.attributes.each do |key, value| %>
        <tr>
          <% unless key == 'id' || key.include?('digest') || key == 'created_at' || key == 'updated_at' %>
            <% if key == 'status' %>
              <td><%= t 'status.status' %></td>
              <td><%= status_mark @plant.status %></td>
            <% elsif key == 'family_id' %>
              <td><%= t "activerecord.attributes.plant.#{key}" %></td>
              <td><%= "#{@plant.family.title}" %></td>
            <% else %>
              <td><%= t "activerecord.attributes.plant.#{key}" %></td>
              <td><%= value %></td>
            <% end %>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= render 'admin/shared/show_rich_text_content', object: @plant %>
  <%= render 'admin/shared/show_images', object: @plant %>
</div>
