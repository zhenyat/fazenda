<h1><%= t Grower.model_name.human(count: 2) %></h1>
<table class='table table-hover'>
  <thead>
      <th>Avatar</th>
      <th><%= Grower.human_attribute_name(:name) %></th>
      <th><%= Grower.human_attribute_name(:title) %></th>
      <th><%= t 'status.status' %></th>
      <th><%= t 'actions.actions' %><th>
  </thead>

  <tbody>
    <% @growers.each do |grower| %>
      <tr>
        <td><%= render 'admin/shared/show_avatar', object: grower, size: 50 %></td>
        <td><%= grower.name %></td>
        <td><%= grower.title %></td>
        <td><%= status_mark grower.status %></td>
        <td><%= render 'admin/shared/index_buttons', resource: grower %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<div class='row'>
  <div class='col-md-2'>
    <%= link_to t('actions.create'), new_admin_grower_path, class: 'btn btn-primary btn-sm' %>
  </div>
</div>
