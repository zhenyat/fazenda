<h1><%= t Location.model_name.human(count: 2) %></h1>
<table class='table table-hover'>
  <thead>
      <th><%= Location.human_attribute_name(:number) %></th>
      <th><%= Location.human_attribute_name(:title) %></th>
      <th><%= Location.human_attribute_name(:comment) %></th>
      <th><%= t 'status.status' %></th>
      <th><%= t 'actions.actions' %><th>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= location.number %></td>
        <td><%= location.title %></td>
        <td><%= location.comment %></td>
        <td><%= status_mark location.status %></td>
        <td><%= render 'admin/shared/index_buttons', resource: location %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<div class='row'>
  <div class='col-md-2'>
    <%= link_to t('actions.create'), new_admin_location_path, class: 'btn btn-primary btn-sm' %>
  </div>
</div>
