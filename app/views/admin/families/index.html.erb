<h1><%= t Family.model_name.human(count: 2) %></h1>
<table class='table table-hover'>
  <thead>
      <th><%= Family.human_attribute_name(:name) %></th>
      <th><%= Family.human_attribute_name(:title) %></th>
      <th><%= Family.human_attribute_name(:comment) %></th>
      <th><%= t 'status.status' %></th>
      <th><%= t 'actions.actions' %><th>
  </thead>

  <tbody>
    <% @families.each do |family| %>
      <tr>
        <td><%= family.name %></td>
        <td><%= family.title %></td>
        <td><%= family.comment %></td>
        <td><%= status_mark family.status %></td>
        <td><%= render 'admin/shared/index_buttons', resource: family %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<div class='row'>
  <div class='col-md-2'>
    <%= link_to t('actions.create'), new_admin_family_path, class: 'btn btn-primary btn-sm' %>
  </div>
</div>
