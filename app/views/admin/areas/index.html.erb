<h1><%= t Area.model_name.human(count: 2) %></h1>
<table class='table table-hover'>
  <thead>
      <th><%= Area.human_attribute_name(:name) %></th>
      <th><%= Area.human_attribute_name(:title) %></th>
      <th><%= Area.human_attribute_name(:description) %></th>
      <th><%= t 'status.status' %></th>
      <th><%= t 'actions.actions' %><th>
  </thead>

  <tbody>
    <% @areas.each do |area| %>
      <tr>
        <td><%= area.name %></td>
        <td><%= area.title %></td>
        <td><%= area.description %></td>
        <td><%= status_mark area.status %></td>
        <td><%= render 'admin/shared/index_buttons', resource: area %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<div class='row'>
  <div class='col-md-2'>
    <%= link_to t('actions.create'), new_admin_area_path, class: 'btn btn-primary btn-sm' %>
  </div>
</div>
